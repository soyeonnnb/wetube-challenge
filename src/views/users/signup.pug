extends ../base

block content 
    if errorMessage 
        span=errorMessage
    div.form-template
        form(method="POST")
            h1 계정 만들기
            input(type="text" name="name" placeholder="이름" required value=formData?formData.name:"")
            input(type="text" name="username" placeholder="사용자 이름" required value=formData?formData.username:"")
            input(type="email" name="email" placeholder="이메일 주소" required value=formData?formData.email:"")
            input(type="password" name="password" placeholder="비밀번호" required value=formData?formData.password:"")
            input(type="password" name="password1" placeholder="확인" required value=formData?formData.password1:"")
            input(type="submit" value="계정 만들기")
            div.ment
                span 이미 계정이 있으시나요? 
                a(href="/login")  로그인
        
            hr
            ul.social-login
                li.github
                    i.fa-brands.fa-github 
                    a(href="/users/github/start")  깃허브 로그인
                li.kakao
                    i.fa-solid.fa-comment
                    a(href="/users/kakao/start")  카카오 로그인
                li.naver
                    i.fa-solid.fa-n
                    a(href="/users/naver/start")  네이버 로그인
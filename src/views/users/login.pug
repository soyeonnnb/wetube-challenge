extends ../base

block content    
    if errorMessage 
        span=errorMessage
    div.form-template
        form(method="POST")
            h1 로그인
            input(type="text" name="username" placeholder="사용자 이름 또는 이메일" required value=formData?formData.username:"")
            input(type="password" name="password" placeholder="비밀번호" required value=formData?formData.password:"")
            input(type="submit" value="로그인")
            div.ment
                span 아직 계정이 없으십니까? 
                a(href="/signup")  계정 만들기 
        
            hr
            ul.social-login
                li.github
                    i.fa-brands.fa-github 
                    a(href="/users/github/start")  깃허브 로그인
                li.kakao
                    i.fa-solid.fa-comment
                    a(href="/users/kakao/start")  카카오 로그인
                li.naver
                    i.fa-solid.fa-n
                    a(href="/users/naver/start")  네이버 로그인